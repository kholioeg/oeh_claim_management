<odoo>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="medical_insurance_patient_list">
        <field name="name">Patient list</field>
        <field name="model">medical.insurance.patient</field>
        <field name="arch" type="xml">
            <tree>
                <field name="first_name"/>
                <field name="last_name"/>
                <field name="birthday"/>
                <field name="age" on_change="0"/>
                <field name="NID"/>
                <field name="gender"/>
                <field name="marital_status"/>
                <field name="mobile"/>
                <field name="phone"/>
                <field name="email"/>
                <field name="blood_group"/>
                <field name="height"/>
                <field name="weight"/>
                <field name="patient_status"/>
            </tree>
        </field>
    </record>

    <record model="ir.sequence" id="seq_patient_id">
        <field name="name">Patient Number</field>
        <field name="code">medical.insurance.patient</field>
        <field name="prefix">PA</field>
        <field name="padding">5</field>
    </record>

    <!-- explicit form view definition -->
    <record model="ir.ui.view" id="patient_form">
        <field name="name">patient form</field>
        <field name="model">medical.insurance.patient</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field name="image_medium" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                        <label class="oe_edit_only" for="name" string="MRN"/>
                        <h1><field name="name" placeholder="MRN" readonly="1"/></h1>
                    </div>

                    <notebook position="inside">
                        <page string="Personal Info">
                            <group>
                                <field name="name" string="MRN" readonly="1"/>
                            </group>
                            <group col="4">
                                <field name="first_name"/>
                                <field name="last_name"/>
                                <field name="birthday"/>
                                <field name="age"/>
                                <field name="NID"/>
                                <field name="gender"/>
                                <field name="marital_status"/>
                            </group>
                        </page>
                        <page string="Medical Info">


                            <notebook position="inside">
                                <page string="Basic Info">
                                    <group col="4">
                                        <field name="blood_group"/>
                                        <field name="height"/>
                                        <field name="weight"/>
                                        <field name="patient_status"/>
                                    </group>
                                </page>
                                <page string="Disease">
                                    <group>
                                        <field name="disease"/>
                                    </group>
                                </page>
                                <page string="Vital Signs History">
                                    <group>
                                        <field name="vital_signs_history"/>
                                    </group>
                                </page>
                                <page string="Operation Reservation">
                                    <group>
                                        <field name="operation_reservation"/>
                                    </group>
                                </page>
                                <page string="Medicine">
                                    <group>
                                        <field name="medicine"/>
                                    </group>
                                </page>
                                <page string="Antenatal Care Line">
                                    <group>
                                        <field name="antenatal_care"/>
                                    </group>
                                </page>
                            </notebook>
                        </page>

                        <page string="Contact Info">
                            <group col="4">
                                <field name="mobile"/>
                                <field name="phone"/>
                                <field name="email"/>
                            </group>
                        </page>
                        <page string="Plan Info">
                            <group  col="4">
                                <field name="price_plan"/>
                                <field name="plan_cost"/>
                                <field name="paid_cost"/>
                                <field name="remain_cost" />
                                <field name="start_date"/>
                                <field name="end_date"/>

                            </group>
                            <group  col="2">
                                <group>

                                    <field name="status"/>

                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>





    <record model="ir.actions.act_window" id="medical_insurance_action_patient">
        <field name="name">patient window</field>
        <field name="res_model">medical.insurance.patient</field>
        <field name="context">{'custom_search': True}</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'default_customer': True}</field>
    </record>
    <!-- actions -->
    <menuitem name="Patient" id="medical_insurance_patient" parent="medical_insurance_menu_registration" action="medical_insurance_action_patient"/>

</odoo>