<odoo>
<!-- explicit list view definition -->
  <record model="ir.ui.view" id="medical_insurance_patient_list">
      <field name="name">Patient list</field>
      <field name="model">medical.insurance.patient</field>
      <field name="arch" type="xml">
        <tree>
          <field name="image_small" widget='image' class="oe_avatar"/>
          <field name="first_name"/>
          <field name="last_name"/>
          <field name="NID"/>
          <field name="date_of_birth"/>
          <field name="gender"/>
          <field name="marital_status"/>
          <field name="mobile"/>
          <field name="phone"/>
          <field name="email"/>
          <field name="blood_group"/>
          <field name="height"/>
          <field name="weight"/>
          <field name="status"/>
        </tree>
      </field>
    </record>

    <record model="ir.sequence" id="seq_patient_id">
        <field name="name">Patient Number</field>
        <field name="code">medical.insurance.patient</field>
        <field name="prefix">PA</field>
        <field name="padding">5</field>
    </record>

<!-- explicit form view definition -->
    <record model="ir.ui.view" id="patient_form">
      <field name="name">patient form</field>
      <field name="model">medical.insurance.patient</field>
      <field name="arch" type="xml">
          <form>
              <header>
                <field name="name"/>
            </header>
            <sheet>
            <notebook position="inside">
              <page string="Personal Info">
              <group col="2">
                  <field name="image_small" widget="image" class="oe_avatar"/>
              </group>
                <group col="4">
                  <field name="first_name"/>
                  <field name="last_name"/>
                  <field name="NID"/>
                  <field name="date_of_birth"/>
                  <field name="gender"/>
                  <field name="marital_status"/>
                </group>
              </page>
              <page string="Medical Info">
                <group col="4">
                  <field name="blood_group"/>
                  <field name="height"/>
                  <field name="weight"/>
                  <field name="status"/>
                </group>
              </page>
              <page string="Contact Info">
                <group col="4">
                  <field name="mobile"/>
                  <field name="phone"/>
                  <field name="email"/>
                </group>
              </page>
               <page string="Price Plan Info">
                <group >
                  <field name="patient_line"/>
                </group>
              </page>
              <page string="EHR">
                  <group>
                    <field name="EHR"/>
                  </group>
              </page>
               </notebook>
            </sheet>
          </form>
      </field>
    </record>

       <!--report view -->
    <report
        id="patient_report"
        model="medical.insurance.patient"
        string="Patient Report"
        report_type="qweb-pdf"
        name="medical_insurance.patient_report_view"
        file="account.report_invoice"
        attachment_use="True"
        attachment="(object.state in ('open','paid')) and
        ('INV'+(object.number or '').replace('/','')+'.pdf')"
            />
    <template id="patient_report_view">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page">

                        <h3>first_name: </h3>
                        <h5 t-field="doc.first_name"/>
                        <h3>last_name: </h3>
                        <h5 t-field="doc.last_name"/>
                        <h3>mobile:</h3>
                        <h5 t-field="doc.mobile"/>
                        <h3>Total phone: </h3>
                        <h5 t-field="doc.phone"/>
                    </div>
                </t>
            </t>
        </t>
    </template>

    <record model="ir.actions.act_window" id="medical_insurance_action_patient">
      <field name="name">patient window</field>
      <field name="res_model">medical.insurance.patient</field>
      <field name="view_mode">tree,form</field>
    </record>
    <!-- actions -->
    <menuitem name="Patient" id="medical_insurance_patient" parent="medical_insurance_menu_registration" action="medical_insurance_action_patient"/>

</odoo>