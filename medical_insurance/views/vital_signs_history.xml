<odoo>
    <record model="ir.ui.view" id="vital_signs_list">
        <field name="name">Vital signs list</field>
        <field name="model">medical.insurance.vitalsignshistory</field>
        <field name="priority" eval="16"/>
        <field name="arch" type="xml">
            <tree>
                        <field name="VB"/>
                        <field name="F1_O2"/>
                        <field name="RR_SPO2"/>
                        <field name="sao2"/>
                        <field name="patient_id"/>
                        <field name="T"/>
                        <field name="BP"/>
                        <field name="HR"/>
                        <field name="date_time"/>
                        <field name="D"/>
                        <field name="P"/>
                        <field name="FHS"/>
                        <field name="remarks"/>
            </tree>
        </field>
    </record>

