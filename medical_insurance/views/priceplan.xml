<odoo>
    <data>
    <record model="ir.ui.view" id="PricePlanList">
        <field name="name">PricePlan List</field>
        <field name="model">medical.insurance.price.plan</field>
        <field name="priority" eval="16"/>
        <field name="arch" type="xml">
            <tree>
                <field name="product_id"/>
                <field name="status"/>
                <field name="start_date"/>
                <field name="end_date"/>
<!--                  <field name="patient"/>-->
                <!--field name="medical_center"/-->
<!--                <field name="service_line"/>-->
            </tree>
        </field>
    </record>
    <!-- explicit form view definition -->
        <record model="ir.ui.view" id="price_plan_form">
        <field name="name">price_plan_form</field>
        <field name="model">medical.insurance.price.plan</field>
        <field name="arch" type="xml">
          <form>
            <sheet>
            <notebook position="inside">
              <page string="Price Plan Info">
                <group col="4">
                    <field name="product_id"/>
                    <field name="status"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                </group>
              </page>
                <page string="Medical Center  Info">
                <group  col="2">
                    <group>
                   <field name="medical_center_id"/>
                    </group>
                </group>
              </page>
                <page string="Patient Price Plan Info">
                <group col="4">
                    <field name="plan_cost"/>
                    <field name="paid_cost"/>
                    <field name="remain_cost" />
                </group>
                 <group>
                     <field name="patient"/>
                 </group>
              </page>
              <page string="Service Line  Info">
                <group>
                   <field name="service_line"/>
                </group>
              </page>
            </notebook>
            </sheet>

              <div class="oe_chatter">
                <field name="message_follower_ids" widget="mail_followers"/>
                <field name="activity_ids" widget="mail_activity"/>
                <field name="message_ids" widget="mail_thread"/>
    </div>
          </form>
      </field>
    </record>


