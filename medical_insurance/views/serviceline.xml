<odoo>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="ServiceLineList">
    <field name="name">ServiceLine list</field>
    <field name="model">medical.insurance.service.line</field>
    <field name="priority" eval="16"/>
    <field name="arch" type="xml">
    <tree>
          <field name="name"/>
          <field name="price_plan"/>
          <field name="sale_price"/>
          <field name="vendor_price"/>
          <field name="patient_price"/>

          <!--field name="visit"/-->

    </tree>
    </field>
    </record>
<!-- explicit form view definition-->
    <record model="ir.ui.view" id="service_line_form">
        <field name="name">service_line_form</field>
        <field name="model">medical.insurance.service.line</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group string="Service Line" col="4">
                        <field name="name"/>
                        <field name="sale_price"/>
                        <field name="vendor_price"/>
                        <field name="patient_price"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <!--report view -->
    <report
        id="service_report"
        model="medical.insurance.service.line"
        string="ServiceLine Report"
        name="medical_insurance.service_report_view"
        report_type="qweb-pdf" />
    <template id="service_report_view">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2 t-field="doc.name"/>
                        <h3>Vendor Contribution: </h3>
                        <h5 t-field="doc.vendor_price"/>
                        <h3>Patient Price:</h3>
                        <h5 t-field="doc.patient_price"/>
                        <h3>Total Price: </h3>
                        <h5 t-field="doc.sale_price"/>
                    </div>
                </t>
            </t>
        </t>
    </template>

    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="ServiceLine_action_window">
      <field name="name">ServiceLine window</field>
      <field name="res_model">medical.insurance.service.line</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- actions -->
    <menuitem name="ServiceLine" id="medical_insurance_menu_service" parent="medical_insurance_menu_conf"
              action="ServiceLine_action_window"/>





</odoo>