<odoo>
    <record model="ir.ui.view" id="disease_list">
        <field name="name">Disease list</field>
        <field name="model">medical.insurance.disease</field>
        <field name="priority" eval="16"/>
        <field name="arch" type="xml">
            <tree>
                <field name="disease"/>
                <field name="severity"/>
                <field name="state"/>
                <field name="infectious"/>
                <field name="diagnosed_on"/>
                <field name="remarks"/>
            </tree>
        </field>
    </record>

<!-- explicit form view definition-->
    <record model="ir.ui.view" id="disease_form">
        <field name="name">ehr_list</field>
        <field name="model">medical.insurance.disease</field>
        <field name="arch" type="xml">
            <form>
                <sheet>


                    <group col="4">
                        <field name="disease"/>
                        <field name="severity"/>
                        <field name="state"/>
                        <field name="infectious"/>
                        <field name="diagnosed_on"/>
                        <field name="remarks"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
<!-- explicit list view definition -->

<!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="Disease_action_window">
      <field name="name">Disease window</field>
      <field name="res_model">medical.insurance.disease</field>
      <field name="view_mode">tree,form</field>
    </record>

</odoo>