<odoo>
    <record model="ir.ui.view" id="medicine_list">
        <field name="name">Medicine list</field>
        <field name="model">medical.insurance.medicine</field>
        <field name="priority" eval="16"/>
        <field name="arch" type="xml">
            <tree>
                <field name="medicine"/>
                <field name="indication"/>
                <field name="Start"/>
                <field name="End"/>
                <field name="prescription_reference"/>
                <field name="dose"/>
                <field name="dose_unit"/>
                <field name="Frequency"/>
                <field name="X"/>
                <field name="treatment_duration"/>
                <field name="treatment_period"/>
                <field name="Comment"/>
            </tree>
        </field>
    </record>

<!-- explicit form view definition-->
    <record model="ir.ui.view" id="medicine_form">
        <field name="name">medicine_list</field>
        <field name="model">medical.insurance.medicine</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group col="4">
                        <field name="medicine"/>
                        <field name="indication"/>
                        <field name="Start"/>
                        <field name="End"/>
                        <field name="prescription_reference"/>
                        <field name="dose"/>
                        <field name="dose_unit"/>
                        <field name="Frequency"/>
                        <field name="X"/>
                        <field name="treatment_duration"/>
                        <field name="treatment_period"/>
                        <field name="Comment"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
<!-- explicit list view definition -->

<!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="Medicine_action_window">
      <field name="name">Medicine window</field>
      <field name="res_model">medical.insurance.medicine</field>
      <field name="view_mode">tree,form</field>
    </record>

</odoo>