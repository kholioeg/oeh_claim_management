<odoo>

<!-- explicit form view definition-->
    <record model="ir.ui.view" id="medical_center_form">
        <field name="name">medical_center_list</field>
        <field name="model">medical.insurance.medical.center</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group string="Medical Center" col="4">
                        <field name="name"/>
                        <field name="email"/>
                        <field name="phone"/>
                        <field name="mobile"/>
                        <field name="country_id"/>
                        <field name="contact_address"/>
                    </group>
                    <group>
                        <field name="price_plan_id"/>
                    </group>
                    <group>
                        <field name="visit"/>
                    </group>
                </sheet>
                 <div class="oe_chatter">
                     <field name="message_follower_ids" widget="mail_followers"/>
                     <field name="activity_ids" widget="mail_activity"/>
                     <field name="message_ids" widget="mail_thread"/>
                 </div>
            </form>
        </field>
    </record>


<!-- explicit list view definition -->
    <record model="ir.ui.view" id="medical_center_list">
        <field name="name">MedicalCenter list</field>
        <field name="model">medical.insurance.medical.center</field>
        <field name="priority" eval="16"/>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="mobile"/>
                <field name="country_id"/>
                <field name="contact_address"/>
                <field name="visit"/>
            </tree>
        </field>
    </record>


