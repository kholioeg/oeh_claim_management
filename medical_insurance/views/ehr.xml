<odoo>
    <record model="ir.ui.view" id="ehr_list">
        <field name="name">EHR list</field>
        <field name="model">medical.insurance.ehr</field>
        <field name="priority" eval="16"/>
        <field name="arch" type="xml">
            <tree>
                <field name="disease"/>
                <field name="severity"/>
                <field name="state"/>
                <field name="infectious"/>
                <field name="diagnosed_on"/>
                <field name="remarks"/>
            </tree>
        </field>
    </record>

<!-- explicit form view definition-->
    <record model="ir.ui.view" id="ehr_form">
        <field name="name">ehr_list</field>
        <field name="model">medical.insurance.ehr</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <notebook>
                   <page string="Disease">
                    <group col="4">
                        <field name="disease"/>
                        <field name="severity"/>
                        <field name="state"/>
                        <field name="infectious"/>
                        <field name="diagnosed_on"/>
                        <field name="remarks"/>
                    </group>
                   </page>

                   <page string="Medication">
                    <group col="4">
                         <field name="medicament"/>
                         <field name="indication"/>
                         <field name="start"/>
                         <field name="end"/>
                    </group>
                   </page>

                   <page string="vaccination">
                    <group col="4">
                        <field name="vaccine"/>
                        <field name="dose"/>
                        <field name="Date"/>
                        <field name="observation"/>
                    </group>
                   </page>
               </notebook>
                </sheet>
            </form>
        </field>
    </record>
<!-- explicit list view definition -->

<!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="EHR_action_window">
      <field name="name">EHR window</field>
      <field name="res_model">medical.insurance.ehr</field>
      <field name="view_mode">tree,form</field>
    </record>

</odoo>