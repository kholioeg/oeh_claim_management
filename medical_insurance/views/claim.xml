        <!-- explicit graph view definition -->

        <record model="ir.ui.view" id="medical_insurance_graph_visit">
            <field name="name">visit graph</field>
            <field name="model">medical.insurance.claim</field>
            <field name="arch" type="xml">
                <graph type="bar">
                    <field name="date_of_visit" type="row"/>
                </graph>
            </field>
        </record>


        <!-- explicit pivot view definition -->

        <record model="ir.ui.view" id="medical_insurance_pivot_visit">
            <field name="name">visit graph</field>
            <field name="model">medical.insurance.claim</field>
            <field name="arch" type="xml">
                <pivot>
                    <field name="date_of_visit" type="row"/>
                </pivot>
            </field>
        </record>


        <!-- explicit calendar view definition -->

        <record id="medical_insurance_calendar_visit" model="ir.ui.view">
            <field name="name">claim calendar</field>
            <field name="model">medical.insurance.claim</field>
            <field name="arch" type="xml">
                <calendar string="Claims" date_start="date_of_visit">
                    <field name="name"/>
                </calendar>
            </field>
        </record>


        <!-- explicit search view definition -->

        <record id="search_all_claims" model="ir.ui.view">
            <field name="model">medical.insurance.claim</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name" />
                    <field name="medical_center_id"/>
                    <field name="service_line_id" widget="many2one" />
                    <group expand="0" string="Group By">
                        <filter name="groupby_medical_center" string="Medical Center" domain="[]" context="{'group_by':'medical_center_id'}"/>
                        <filter name="groupby_service_line" string="Service" domain="[]" context="{'group_by':'service_line_id'}"/>
                        <filter name="groupby_price_plan" string="Price Plan" domain="[]" context="{'group_by':'price_plan'}"/>
                    </group>
                    <filter name="date_of_visit" string="Date Of Visit" date="date_of_visit"/>
                </search>
            </field>
        </record>


        <!-- explicit report view definition -->

        <report
                id="medical_insurance_claim_report"
                model="medical.insurance.claim"
                string="Claim Report"
                report_type="qweb-pdf"
                name="medical_insurance.medical_insurance_claim_report_view"
                file="medical_insurance.medical_insurance_claim_report_view"
        />

        <template id="medical_insurance_claim_report_view">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-call="web.external_layout">
                        <div class="page">
                            <h5 style="color:blue">Claim Report</h5>
                            <div class="oe_structure"/>
                            <div class="row col mt32 mb32" id="informations">
                                <div class="mr32">
                                    <strong>Patient Name:</strong>
                                    <p t-field="doc.name"/>
                                </div>
                                <div  class="mr32">
                                    <strong>Patient  Status:</strong>
                                    <p t-field="doc.price_plan_status"/>
                                </div>
                                <div  class="mr32">
                                    <strong>Medical Center:</strong>
                                    <p t-field="doc.medical_center_id"/>
                                </div>
                            </div>



                            <div class="oe_structure"/>
                            <div class="row col mt32 mb32" id="informations">
                                <div  class="mr32">
                                    <strong>Service Name:</strong>
                                    <p t-field="doc.service_line_id"/>
                                </div>
                                <div  class="mr32">
                                    <strong>Service Type:</strong>
                                    <p t-field="doc.service_line_type"/>
                                </div>
                            </div>


                            <div class="oe_structure"/>
                            <div class="row col mt32 mb32" id="informations">
                                <div  class="mr32">
                                    <strong>Claim  Status:</strong>
                                    <p t-field="doc.claim_status"/>
                                </div>
                                <div  class="mr32">
                                    <strong>Price  Plan:</strong>
                                    <p t-field="doc.price_plan"/>
                                </div>

                            </div>

                            <div class="oe_structure"/>
                            <div class="row col mt32 mb32" id="informations">

                                <div  class="mr32">
                                    <strong>Patient Charge:</strong>
                                    <p t-field="doc.patient_charge"/>
                                </div>
                                <div  class="mr32">
                                    <strong>Contribution Charge:</strong>
                                    <p t-field="doc.contribution_charge"/>
                                </div>
                            </div>

                            <div class="oe_structure"/>
                            <div class="row col mt32 mb32" id="informations">
                                <div  class="mr32">
                                    <strong>Visit Type</strong>
                                    <p t-field="doc.visit_type"/>
                                </div>
                                <div  class="mr32">
                                    <strong>Date Of Visit:</strong>
                                    <p t-field="doc.date_of_visit"/>
                                </div>
                                 <div  class="mr32">
                                    <strong>Claim Status:</strong>
                                    <p t-field="doc.claim_status"/>
                                </div>
                            </div>

                        </div>
                    </t>
                </t>
            </t>
        </template>


        <!-- actions opening views on models -->

        <record model="ir.actions.act_window" id="medical_insurance_action_visit_one">
            <field name="name">claim window</field>
            <field name="res_model">medical.insurance.claim</field>
            <field name="view_mode">tree,form,pivot,graph,search,activity,kanban,calendar</field>
            <field name="context">{}</field>
