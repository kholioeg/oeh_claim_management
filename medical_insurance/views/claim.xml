<odoo>
  <data>


    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="medical_insurance_list_visit">
      <field name="name">claim list</field>
      <field name="model">medical.insurance.claim</field>
      <field name="arch" type="xml">
        <tree>
          <field name="date_of_visit"/>
          <field name="patient_id"/>
          <field name="medical_center_id"/>
          <field name="visit_state"/>
          <field name="visit_type"/>
        </tree>
      </field>
    </record>


          <!-- explicit sequence view definition -->

    <record model="ir.sequence" id="seq_visit_id">
        <field name="name">Visit Number</field>
        <field name="code">medical.insurance.claim</field>
        <field name="prefix">CL</field>
        <field name="padding">5</field>
    </record>


    <!-- explicit form view definition -->

    <record model="ir.ui.view" id="medical_insurance_form_visit">
      <field name="name">claim form</field>
      <field name="model">medical.insurance.claim</field>
      <field name="arch" type="xml">
        <form>
            <header>
                <field name="name"/>
                <field name="visit_state" widget="statusbar"/>
            </header>
            <sheet>
            <group string="Claim"  col="4">
              <field name="patient_id"/>
              <field name="medical_center_id"/>
              <field name="service_line_id"/>
              <field name="service_line_name"/>
              <field name="visit_type"/>
              <field name="price_plan_status"/>
              <field name="price_plan"/>
              <field name="claim_status"/>
              <field name="contribution_charge"/>
              <field name="patient_charge"/>
              <field name="date_of_visit"/>
            </group>
            <group string="Service based info">
            <group>
                <field name="history"  attrs="{'invisible': [('service_line_name','!=', 'Re-Assessment')]}"/>
                <field name="care_plan"  attrs="{'invisible': [('service_line_name','!=', 'Re-Assessment')]}"/>
                <field name="diagnosis"  attrs="{'invisible': [('service_line_name','!=', 'Re-Assessment')]}"/>
                <field name="instructions"  attrs="{'invisible': [('service_line_name','!=', 'Re-Assessment')]}"/>
                <field name="temperature" attrs="{'invisible': [('service_line_name','!=', 'Re-Assessment')]}"/>
                <field name="pulse_rate" attrs="{'invisible': [('service_line_name','!=', 'Re-Assessment')]}"/>
                <field name="respiratory_rate" attrs="{'invisible': [('service_line_name','!=', 'Re-Assessment')]}"/>
                <field name="blood_pressure" attrs="{'invisible': [('service_line_name','!=', 'Re-Assessment')]}"/>
                <field name="o2_saturation" attrs="{'invisible': [('service_line_name','!=', 'Re-Assessment')]}"/>
                <field name="pain_score" attrs="{'invisible': [('service_line_name','!=', 'Re-Assessment')]}"/>

            </group>


<!--                <field name="routine" attrs="{'invisible': [('pink','=',True),('yellow','=',True)]}"/>-->
                <group col="6">
                    <field name="routine" attrs="{'invisible': [('service_line_name','!=', 'Laboratory Multipurpose')]}"/>
                    <field name="Urgent" attrs="{'invisible': [('service_line_name','!=', 'Laboratory Multipurpose')]}"/>
                    <field name="pre_operative" attrs="{'invisible': [('service_line_name','!=', 'Laboratory Multipurpose')]}"/>
                </group>
                <group col="2">
                <field name="Requested_by"  attrs="{'invisible': [('service_line_name','!=', 'Laboratory Multipurpose')]}"/>
                <field name="stamp_and_signature" attrs="{'invisible': [('service_line_name','!=', 'Laboratory Multipurpose')]}"/>
                <field name="lab_date" attrs="{'invisible': [('service_line_name','!=', 'Laboratory Multipurpose')]}"/>
                <field name="requested_test" attrs="{'invisible': [('service_line_name','!=', 'Laboratory Multipurpose')]}"/>
                <field name="results" attrs="{'invisible': [('service_line_name','!=', 'Laboratory Multipurpose')]}"/>
                <field name="Pathologist" attrs="{'invisible': [('service_line_name','!=', 'Laboratory Multipurpose')]}"/>
                <field name="Examiner_Name" attrs="{'invisible': [('service_line_name','!=', 'Laboratory Multipurpose')]}"/>
                <field name="clinical_comments"  attrs="{'invisible': [('service_line_name','!=', 'Laboratory Multipurpose')]}"/>
                  </group>
            </group>

            </sheet>
            <div class="oe_chatter">
                <field name="message_follower_ids" widget="mail_followers"/>
                <field name="activity_ids" widget="mail_activity"/>
                <field name="message_ids" widget="mail_thread"/>
            </div>
        </form>
      </field>
    </record>


    <!-- explicit graph view definition -->

    <record model="ir.ui.view" id="medical_insurance_graph_visit">
      <field name="name">visit graph</field>
      <field name="model">medical.insurance.claim</field>
      <field name="arch" type="xml">
        <graph type="bar">
          <field name="date_of_visit" type="row"/>
        </graph>
      </field>
    </record>


          <!-- explicit pivot view definition -->

      <record model="ir.ui.view" id="medical_insurance_pivot_visit">
      <field name="name">visit graph</field>
      <field name="model">medical.insurance.claim</field>
      <field name="arch" type="xml">
        <pivot>
          <field name="date_of_visit" type="row"/>
        </pivot>
      </field>
    </record>


    <!-- explicit calendar view definition -->

        <record id="medical_insurance_calendar_visit" model="ir.ui.view">
            <field name="name">claim calendar</field>
            <field name="model">medical.insurance.claim</field>
            <field name="arch" type="xml">
                <calendar string="Claims" date_start="date_of_visit">
                    <field name="name"/>
                </calendar>
            </field>
        </record>


        <!-- explicit search view definition -->

    <record id="search_all_claims" model="ir.ui.view">
        <field name="model">medical.insurance.claim</field>
        <field name="arch" type="xml">
        <search>
            <field name="name" />
            <field name="medical_center_id"/>
            <field name="service_line_id" widget="many2one" />
            <group expand="0" string="Group By">
                <filter name="groupby_medical_center" string="Medical Center" domain="[]" context="{'group_by':'medical_center_id'}"/>
                <filter name="groupby_service_line" string="Service" domain="[]" context="{'group_by':'service_line_id'}"/>
                <filter name="groupby_price_plan" string="Price Plan" domain="[]" context="{'group_by':'price_plan'}"/>
			</group>
            <filter name="date_of_visit" string="Date Of Visit" date="date_of_visit"/>
        </search>
        </field>
    </record>


              <!-- explicit report view definition -->

     <report
      id="medical_insurance_claim_report"
      model="medical.insurance.claim"
      string="Claim Report"
      report_type="qweb-pdf"
      name="medical_insurance.medical_insurance_claim_report_view"
      file="medical_insurance.medical_insurance_claim_report_view"
    />

    <template id="medical_insurance_claim_report_view">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>Claim</h2>
                        <p>This object's name is <span t-field="doc.name"/></p>
                    </div>
                </t>
            </t>
        </t>
    </template>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="medical_insurance_action_visit">
      <field name="name">claim window</field>
      <field name="res_model">medical.insurance.claim</field>
      <field name="view_mode">tree,form,pivot,graph,search,activity,kanban,calendar</field>
        <field name="context">{}</field>
    </record>


