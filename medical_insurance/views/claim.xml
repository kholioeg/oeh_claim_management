<odoo>
  <data>


    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="medical_insurance_list_visit">
      <field name="name">claim list</field>
      <field name="model">medical.insurance.claim</field>
      <field name="arch" type="xml">
        <tree>
          <field name="date_of_visit"/>
          <field name="patient_id"/>
          <field name="medical_center_id"/>
          <field name="visit_state"/>
          <field name="visit_type"/>
        </tree>
      </field>
    </record>


          <!-- explicit sequence view definition -->

    <record model="ir.sequence" id="seq_visit_id">
        <field name="name">Visit Number</field>
        <field name="code">medical.insurance.claim</field>
        <field name="prefix">CL</field>
        <field name="padding">5</field>
    </record>


    <!-- explicit form view definition -->

    <record model="ir.ui.view" id="medical_insurance_form_visit">
      <field name="name">claim form</field>
      <field name="model">medical.insurance.claim</field>
      <field name="arch" type="xml">
        <form>
            <header>
                <field name="name"/>
                <field name="visit_state" widget="statusbar"/>
            </header>
            <sheet>
            <group string="Claim"  col="4">
              <field name="patient_id"/>
              <field name="medical_center_id"/>
              <field name="service_line_id"/>
              <field name="service_line_name"/>
              <field name="visit_type"/>
              <field name="price_plan_status"/>
              <field name="price_plan"/>
              <field name="claim_status"/>
              <field name="contribution_charge"/>
              <field name="patient_charge"/>
              <field name="date_of_visit"/>
            </group>
            <group string="Service based info">
            <group>
                <field name="history"  attrs="{'invisible': [('service_line_name','!=', 'Re-Assessment')]}"/>
                <field name="care_plan"  attrs="{'invisible': [('service_line_name','!=', 'Re-Assessment')]}"/>
                <field name="diagnosis"  attrs="{'invisible': [('service_line_name','!=', 'Re-Assessment')]}"/>
                <field name="instructions"  attrs="{'invisible': [('service_line_name','!=', 'Re-Assessment')]}"/>
            </group>
                <group col="6" string="Vital Signs" attrs="{'invisible': [('service_line_name','!=', 'Re-Assessment')]}">
                    <field name="temperature" attrs="{'invisible': [('service_line_name','!=', 'Re-Assessment')]}"/>
                    <field name="pulse_rate" attrs="{'invisible': [('service_line_name','!=', 'Re-Assessment')]}"/>
                    <field name="respiratory_rate" attrs="{'invisible': [('service_line_name','!=', 'Re-Assessment')]}"/>
                    <field name="blood_pressure" attrs="{'invisible': [('service_line_name','!=', 'Re-Assessment')]}"/>
                    <field name="o2_saturation" attrs="{'invisible': [('service_line_name','!=', 'Re-Assessment')]}"/>
                    <field name="pain_score" attrs="{'invisible': [('service_line_name','!=', 'Re-Assessment')]}"/>
                </group>

            </group>

                <h3 attrs="{'invisible': [('service_line_name','!=', 'Iv Request')]}">Referring physician :</h3>

                <group col="6">
                     <field name="resident"  attrs="{'invisible': [('service_line_name','!=', 'Iv Request')]}"/>
                     <field name="specialist"  attrs="{'invisible': [('service_line_name','!=', 'Iv Request')]}"/>
                     <field name="consultant"  attrs="{'invisible': [('service_line_name','!=', 'Iv Request')]}"/>
                 </group>

<!--                 <group col="2">-->
<!--                     <field name="referring_physician"  attrs="{'invisible': [('service_line_name','!=', 'Iv Request')]}"/>-->
<!--                 </group>-->

                <h3 attrs="{'invisible': [('service_line_name','!=', 'Iv Request')]}">Degree of urgency :</h3>
                <group col="4">
                    <field name="routine"  attrs="{'invisible': [('service_line_name','!=', 'Iv Request')]}"/>
                     <field name="semi_urgent"  attrs="{'invisible': [('service_line_name','!=', 'Iv Request')]}"/>
                     <field name="urgent"  attrs="{'invisible': [('service_line_name','!=', 'Iv Request')]}"/>
                     <field name="life_saving"  attrs="{'invisible': [('service_line_name','!=', 'Iv Request')]}"/>
                </group>

                <h3 attrs="{'invisible': [('service_line_name','!=', 'Iv Request')]}">Types of access :</h3>
                <group col="4">
                    <field name="peripheral_line"  attrs="{'invisible': [('service_line_name','!=', 'Iv Request')]}"/>
                     <field name="cutdown"  attrs="{'invisible': [('service_line_name','!=', 'Iv Request')]}"/>
                     <field name="port_a_cath"  attrs="{'invisible': [('service_line_name','!=', 'Iv Request')]}"/>
                     <field name="central_line"  attrs="{'invisible': [('service_line_name','!=', 'Iv Request')]}"/>
                </group>

                 <h3 attrs="{'invisible': [('service_line_name','!=', 'Iv Request')]}">Estimation duration of time :</h3>
                <group col="4">
                    <field name="days"  attrs="{'invisible': [('service_line_name','!=', 'Iv Request')]}"/>
                     <field name="more_than_2_weeks"  attrs="{'invisible': [('service_line_name','!=', 'Iv Request')]}"/>
                </group>

                <h3 attrs="{'invisible': [('service_line_name','!=', 'Iv Request')]}">Indication :</h3>
                <group col="4">
                    <field name="blood_exchange"  attrs="{'invisible': [('service_line_name','!=', 'Iv Request')]}"/>
                     <field name="tpn"  attrs="{'invisible': [('service_line_name','!=', 'Iv Request')]}"/>
                     <field name="chemotherapy"  attrs="{'invisible': [('service_line_name','!=', 'Iv Request')]}"/>
                     <field name="coagulopathy"  attrs="{'invisible': [('service_line_name','!=', 'Iv Request')]}"/>
                </group>

                <h3 attrs="{'invisible': [('service_line_name','!=', 'Iv Request')]}">Any previous insertion of central line :</h3>
                <group col="4">
                    <field name="yes"  attrs="{'invisible': [('service_line_name','!=', 'Iv Request')]}"/>
                     <field name="no"  attrs="{'invisible': [('service_line_name','!=', 'Iv Request')]}"/>
                </group>


                <group col="2">
                    <field name="removal_reason"  attrs="{'invisible': [('service_line_name','!=', 'Iv Request')]}"/>
                    <field name="surgical_note"  attrs="{'invisible': [('service_line_name','!=', 'Iv Request')]}"/>
                    <field name="anesthetist_note"  attrs="{'invisible': [('service_line_name','!=', 'Iv Request')]}"/>
                    <field name="procedure"  attrs="{'invisible': [('service_line_name','!=', 'Iv Request')]}"/>

                </group>

                <group col="2">
                    <field name="physician_name"  attrs="{'invisible': [('service_line_name','!=', 'Iv Request')]}"/>
                    <field name="stamp_signature"  attrs="{'invisible': [('service_line_name','!=', 'Iv Request')]}"/>

                </group>


<!--                <field name="routine" attrs="{'invisible': [('pink','=',True),('yellow','=',True)]}"/>-->
                <group col="6">
                    <field name="routine" attrs="{'invisible': [('service_line_name','!=', 'Laboratory Multipurpose')]}"/>
                    <field name="Urgent" attrs="{'invisible': [('service_line_name','!=', 'Laboratory Multipurpose')]}"/>
                    <field name="pre_operative" attrs="{'invisible': [('service_line_name','!=', 'Laboratory Multipurpose')]}"/>
                </group>
                <group col="2">
                    <field name="Requested_by"  attrs="{'invisible': [('service_line_name','!=', 'Laboratory Multipurpose')]}"/>
                    <field name="stamp_and_signature" attrs="{'invisible': [('service_line_name','!=', 'Laboratory Multipurpose')]}"/>
                    <field name="lab_date" attrs="{'invisible': [('service_line_name','!=', 'Laboratory Multipurpose')]}"/>
                    <field name="requested_test" attrs="{'invisible': [('service_line_name','!=', 'Laboratory Multipurpose')]}"/>
                    <field name="results" attrs="{'invisible': [('service_line_name','!=', 'Laboratory Multipurpose')]}"/>
                    <field name="Pathologist" attrs="{'invisible': [('service_line_name','!=', 'Laboratory Multipurpose')]}"/>
                    <field name="Examiner_Name" attrs="{'invisible': [('service_line_name','!=', 'Laboratory Multipurpose')]}"/>
                    <field name="clinical_comments"  attrs="{'invisible': [('service_line_name','!=', 'Laboratory Multipurpose')]}"/>
                </group>

            </sheet>
            <div class="oe_chatter">
                <field name="message_follower_ids" widget="mail_followers"/>
                <field name="activity_ids" widget="mail_activity"/>
                <field name="message_ids" widget="mail_thread"/>
            </div>
        </form>
      </field>
    </record>


    <!-- explicit graph view definition -->

    <record model="ir.ui.view" id="medical_insurance_graph_visit">
      <field name="name">visit graph</field>
      <field name="model">medical.insurance.claim</field>
      <field name="arch" type="xml">
        <graph type="bar">
          <field name="date_of_visit" type="row"/>
        </graph>
      </field>
    </record>

      <record model="ir.ui.view" id="medical_insurance_graph_pivot_visit">
      <field name="name">visit graph</field>
      <field name="model">medical.insurance.claim</field>
      <field name="arch" type="xml">
        <pivot>
          <field name="date_of_visit" type="row"/>
        </pivot>
      </field>
    </record>


        <!-- explicit report view definition -->

    <report
      id="account_invoices"
      model="medical.insurance.claim"
      string="claim"
      report_type="qweb-pdf"
      name="medical_insurance.report_visit"
      file="medical_insurance.report_visit"
    />

    <template id="report_visit">
    <t t-call="web.html_container">
        <t t-foreach="docs" t-as="o">
            <t t-call="web.external_layout">
                <div class="page">
                    <h2>Claim</h2>
                    <p>This object's name is <span t-field="o.name"/></p>
                </div>
            </t>
        </t>
    </t>
    </template>


        <!-- explicit search view definition -->

    <record id="search_all_claims" model="ir.ui.view">
        <field name="model">medical.insurance.claim</field>
        <field name="arch" type="xml">
        <search>
            <field name="name" />
            <field name="medical_center_id"/>
            <field name="service_line_id" widget="many2one" />
            <group expand="0" string="Group By">
                <filter name="groupby_medical_center" string="Medical Center" domain="[]" context="{'group_by':'medical_center_id'}"/>
                <filter name="groupby_service_line" string="Service" domain="[]" context="{'group_by':'service_line_id'}"/>
                <filter name="groupby_price_plan" string="Price Plan" domain="[]" context="{'group_by':'price_plan'}"/>
			</group>
            <filter name="date_of_visit" string="Date Of Visit" date="date_of_visit"/>
        </search>
        </field>
    </record>



    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="medical_insurance_action_visit">
      <field name="name">claim window</field>
      <field name="res_model">medical.insurance.claim</field>
      <field name="view_mode">tree,form,pivot,graph,search,activity,kanban</field>
        <field name="context">{}</field>
    </record>


