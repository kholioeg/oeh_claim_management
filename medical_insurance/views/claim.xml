<odoo>

        <!-- explicit list view definition -->

        <record model="ir.ui.view" id="medical_insurance_list_visit">
            <field name="name">claim list</field>
            <field name="model">medical.insurance.claim</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="date_of_visit"/>
                    <field name="patient_id"  string='Patient Mrn' context="{'custom_search': True}" options='{"always_reload": True}' />
                    <field name="medical_center_id"/>
                    <field name="visit_state"/>
                    <field name="visit_type"/>
                </tree>
            </field>
        </record>


        <!-- explicit sequence view definition -->

        <record model="ir.sequence" id="seq_visit_id">
            <field name="name">Visit Number</field>
            <field name="code">medical.insurance.claim</field>
            <field name="prefix">CL</field>
            <field name="padding">5</field>
        </record>


        <!-- explicit form view definition -->

        <record model="ir.ui.view" id="medical_insurance_form_visit">
            <field name="name">claim form</field>
            <field name="model">medical.insurance.claim</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <field name="visit_state" widget="statusbar" clickable="1"/>
                    </header>

                    <sheet>
                        <group string="Claim"  col="4">
                            <field name="patient_id"  options='{"always_reload": True}'/>
                            <field name="medical_center_id"/>
                            <field name="service_line_id"/>
                            <field name="service_line_type"/>
                            <field name="visit_type"/>
                            <field name="price_plan_status"/>
                            <field name="price_plan"/>
                            <field name="claim_status"/>
                            <field name="contribution_charge"/>
                            <field name="patient_charge"/>
                            <field name="date_of_visit"/>
                            <field name="invoice_id" attrs="{'invisible': [('invoice_id','=',False)]}"/>
                            <field name="id"/>

                        </group>

                        <group string="Service based info" attrs="{'invisible': [('service_line_type','!=', 'Re-Assessment')]}">
                            <group col="2">
                                <field name="history"/>
                                <field name="care_plan"/>
                                <field name="diagnosis"/>
                                <field name="instructions"/>
                            </group>
                            <group col="6" string="Vital Signs">
                                <field name="temperature"/>
                                <field name="pulse_rate"/>
                                <field name="respiratory_rate"/>
                                <field name="blood_pressure"/>
                                <field name="o2_saturation"/>
                                <field name="pain_score"/>
                            </group>
                        </group>

                        <group string="Service based info" attrs="{'invisible': [('service_line_type','!=', 'Iv Request')]}">

                            <group col="6" string="Referring physician">
                                <field name="resident"/>
                                <field name="specialist"/>
                                <field name="consultant"/>
                            </group>

                            <group col="8" string="Degree of urgency">
                                <field name="routine"/>
                                <field name="semi_urgent"/>
                                <field name="urgent"/>
                                <field name="life_saving"/>
                            </group>

                            <group col="8" string="Types of access">
                                <field name="peripheral_line"/>
                                <field name="cutdown"/>
                                <field name="port_a_cath"/>
                                <field name="central_line"/>
                            </group>

                            <group col="4" string="Estimation duration of time">
                                <field name="days"/>
                                <field name="more_than_2_weeks"/>
                            </group>

                            <group col="8" string="Indication">
                                <field name="blood_exchange"/>
                                <field name="tpn"/>
                                <field name="chemotherapy"/>
                                <field name="coagulopathy"/>
                            </group>

                            <group col="4" string="Any previous insertion of central line">
                                <field name="yes"/>
                                <field name="no"/>
                            </group>

                            <separator/>
                            <separator string="If for removal reason"/>
                            <field name="removal_reason"/>
                            <separator string="Surgical note"/>
                            <field name="surgical_note"/>
                            <separator string="Anesthetist note"/>
                            <field name="anesthetist_note"/>
                            <separator string="Procedure"/>
                            <field name="procedure"/>

                            <separator/><separator/>

                            <group>
                                <field name="physician_name"/>
                                <field name="stamp_signature"/>
                            </group>

                        </group>

                        <group string="Service based info" attrs="{'invisible': [('service_line_type','!=', 'Laboratory Multipurpose')]}">
                            <group col="6">
                                <field name="routine"/>
                                <field name="Urgent"/>
                                <field name="pre_operative"/>
                            </group>
                            <group col="2">
                                <field name="Requested_by"/>
                                <field name="stamp_and_signature"/>
                                <field name="lab_date"/>
                                <field name="requested_test"/>
                                <field name="results"/>
                                <field name="Pathologist"/>
                                <field name="Examiner_Name"/>
                                <field name="clinical_comments"/>
                            </group>
                        </group>
                    </sheet>

                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
<!--                </field>-->
            </field>
        </record>


